<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="ONLY_NETWORK"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="ONLY_NETWORK"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/create_btn_id"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="CREATE DATABASE"/>
        <TextView
            android:id="@+id/create_res_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="CREATE DATABASE"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/insert_btn_id"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="INSERT DATA"/>
        <TextView
            android:id="@+id/insert_res_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="INSERT DATA"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/query_btn_id"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="QUERY DATA"/>
        <TextView
            android:id="@+id/query_res_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="QUERY DATA"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/query_n_btn_id"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="QUERY N DATA"/>
        <TextView
            android:id="@+id/query_n_res_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="QUERY N DATA"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/delete_btn_id"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="DELETE DATA"/>
        <TextView
            android:id="@+id/delete_res_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="DELETE DATA"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/datacount_btn_id"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="GET DATA COUNT"/>
        <TextView
            android:id="@+id/datacount_res_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="GET DATA COUNT"/>
    </LinearLayout>

</LinearLayout>
